{
    "name": "provchurch/testimonies",
    "description": "A small framework to serve up testimony videos",
    "keywords": [
        "microframework",
        "rest",
        "router",
        "psr7"
    ],
    "homepage": "https://gitlab.com/nathan.rutman/testimonies",
    "license": "MIT",
    "authors": [
        {
            "name": "Nate Rutman",
            "email": "nate@provchurch.org",
            "homepage": "http://provchurch.org/"
        }
    ],
    "require": {
        "php": "^7.1",
        "ext-json": "*",
        "erusev/parsedown": "^1.7",
        "monolog/monolog": "^1.24",
        "php-di/php-di": "^6.0.11",
        "slim/psr7": "^0.5",
        "slim/slim": "^4.1",
        "slim/twig-view": "^3",
        "spatie/yaml-front-matter": "^2.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.16",
        "mockery/mockery": "^1.3",
        "phpunit/phpunit": "^8"
    },
    "config": {
        "process-timeout": 0,
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "cs": "php-cs-fixer fix --config=.php_cs.dist -v --diff --dry-run",
        "cs-fix": "php-cs-fixer fix --config=.php_cs.dist -v --diff",
        "start": "php -S localhost:8080 -t public",
        "test": "phpunit"
    }
}
